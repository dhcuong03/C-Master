@model IEnumerable<TestMaster.Models.Question>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Ngân hàng câu hỏi";
    // --- LOGIC CHỌN LAYOUT ---
    // Tự động chọn layout phù hợp với vai trò của người dùng
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_HRLayout.cshtml";
    }
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    </div>

    <!-- Hiển thị thông báo (nếu có) -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Bộ lọc và Tìm kiếm -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bộ lọc và Tìm kiếm</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Nội dung câu hỏi</label>
                    <input type="text" name="searchString" class="form-control" placeholder="Nhập từ khóa..." value="@ViewData["CurrentSearch"]" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Kỹ năng</label>
                    <select name="skillId" class="form-select" asp-items="ViewBag.SkillList">
                        <option value="">-- Tất cả kỹ năng --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Độ khó</label>
                    <select name="difficulty" class="form-select" asp-items="ViewBag.DifficultyList">
                        <option value="">-- Mọi độ khó --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search fa-sm"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Các nút chức năng -->
    <div class="d-flex justify-content-end mb-3">
        @if (User.IsInRole("Admin"))
        {
            <button type="button" class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="fas fa-file-excel fa-sm"></i> Import từ Excel
            </button>
        }
        <a asp-action="Create" class="btn btn-info">
            <i class="fas fa-plus fa-sm"></i> Tạo câu hỏi mới
        </a>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách câu hỏi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nội dung</th>
                            <th>Kỹ năng</th>
                            <th>Độ khó</th>
                            <th>Loại</th>
                            <th style="width: 150px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Content)</td>
                                <td>@Html.DisplayFor(modelItem => item.Skill.SkillName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Difficulty)</td>
                                <td>@Html.DisplayFor(modelItem => item.QuestionType)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.QuestionId" class="btn btn-warning btn-sm" title="Sửa"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.QuestionId" class="btn btn-info btn-sm" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.QuestionId" class="btn btn-danger btn-sm" title="Xóa"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Import Excel Modal (CHỈ HIỂN THỊ CHO ADMIN) -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="importModalLabel">Import Câu hỏi từ File Excel</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>
                            Vui lòng chọn file Excel (.xlsx) theo đúng định dạng mẫu.
                            <br />
                            <a asp-action="DownloadTemplate" asp-controller="Questions">
                                <i class="fas fa-download fa-sm"></i> Tải file mẫu tại đây
                            </a>.
                        </p>
                        <hr />
                        <input type="file" name="file" class="form-control" required accept=".xlsx, .xls" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-file-import fa-sm"></i> Bắt đầu Import
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}