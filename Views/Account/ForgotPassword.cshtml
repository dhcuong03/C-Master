@model TestMaster.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null; // Trang này không dùng layout chung
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestMaster</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.4/css/sb-admin-2.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu?</h1>
                                <p class="mb-4">Chỉ cần nhập địa chỉ email của bạn bên dưới và chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu!</p>
                            </div>

                            @if (ViewData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">@ViewData["SuccessMessage"]</div>
                                <div class="alert alert-info">
                                    <strong>Link khôi phục (Mô phỏng):</strong><br />
                                    <a href="@ViewData["ResetLink"]" style="word-break: break-all;">@ViewData["ResetLink"]</a>
                                    <p class="mt-2 small">Trong thực tế, link này sẽ được gửi tới email của bạn. Vui lòng copy và dán vào trình duyệt để tiếp tục.</p>
                                </div>
                            }
                            else
                            {
                                <form class="user" asp-action="ForgotPassword" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @if (ViewData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
                                    }
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control form-control-user" placeholder="Nhập địa chỉ Email...">
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Gửi yêu cầu
                                    </button>
                                </form>
                            }
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="Login">Quay lại trang đăng nhập</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
