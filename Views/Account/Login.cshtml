@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">Đăng nhập hệ thống</h2>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    <div class="form-floating mb-3">
                        <input type="text" id="username" name="username" class="form-control" placeholder="Tên đăng nhập" required />
                        <label for="username">Tên đăng nhập</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" id="password" name="password" class="form-control" placeholder="Mật khẩu" required />
                        <label for="password">Mật khẩu</label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                    </div>

                    <div class="text-center">
                        <a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
