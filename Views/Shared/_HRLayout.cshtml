<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HR Portal</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-color: #0d6efd; /* Bootstrap Blue */
            --bg-light: #f8f9fa;
            --bg-white: #ffffff;
            --border-color: #dee2e6;
            --text-dark: #212529;
            --text-muted: #6c757d;
            --shadow-sm: 0 .125rem .25rem rgba(0, 0, 0, .075);
            --shadow: 0 .5rem 1rem rgba(0, 0, 0, .15);
            --font-family-sans-serif: 'Inter', sans-serif;
        }

        body {
            font-family: var(--font-family-sans-serif);
            background-color: var(--bg-light);
            color: var(--text-dark);
            font-size: 15px;
        }

        .hr-portal-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* --- Header trên cùng --- */
        .top-header {
            background-color: var(--bg-white);
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 1030;
        }

            .top-header .navbar-brand {
                font-weight: 600;
                color: var(--primary-color);
            }

            .top-header .user-display {
                display: flex;
                align-items: center;
            }

            .top-header .user-avatar {
                width: 38px;
                height: 38px;
                border-radius: 50%;
                background-color: var(--primary-color);
                color: var(--bg-white);
                display: inline-flex;
                align-items: center;
                justify-content: center;
                font-weight: 500;
                margin-left: 12px;
            }

            .top-header .dropdown-toggle::after {
                display: none;
            }

        /* --- Thanh điều hướng chính --- */
        .main-nav {
            background-color: var(--bg-white);
            box-shadow: var(--shadow-sm);
            padding: 0.25rem 0;
        }

            .main-nav .nav-link {
                color: var(--text-muted);
                font-weight: 500;
                padding: 0.8rem 1rem;
                border-bottom: 3px solid transparent;
                transition: all 0.2s ease-in-out;
                display: flex;
                align-items: center;
            }

                .main-nav .nav-link i {
                    margin-right: 8px;
                    font-size: 1.1em;
                    width: 20px; /* Căn chỉnh icon thẳng hàng */
                    text-align: center;
                }

                .main-nav .nav-link:hover {
                    color: var(--text-dark);
                    background-color: var(--bg-light);
                }

                .main-nav .nav-link.active {
                    color: var(--primary-color);
                    border-bottom-color: var(--primary-color);
                }

        /* --- Khu vực nội dung --- */
        .main-content {
            flex-grow: 1;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        /* --- Ghi đè style Bootstrap cho đẹp hơn --- */
        .card {
            border: none;
            box-shadow: var(--shadow-sm);
        }

        .btn {
            border-radius: 0.375rem; /* bo tròn nhẹ */
        }
    </style>
</head>
<body>
    <div class="hr-portal-wrapper">
        <header class="top-header">
            <div class="container-fluid">
                <nav class="navbar navbar-expand p-0">
                    <a class="navbar-brand" asp-controller="HRDashboard" asp-action="Index">
                        <i class="fa-solid fa-briefcase"></i>
                        HR Portal
                    </a>
                    <div class="ms-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a href="#" class="nav-link dropdown-toggle user-display" role="button" data-bs-toggle="dropdown">
                                    <span class="d-none d-sm-inline">@User.FindFirst("FullName")?.Value</span>
                                    <div class="user-avatar">
                                        @User.FindFirst("FullName")?.Value?.Substring(0, 1)
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="get">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </nav>
            </div>
        </header>

        <nav class="main-nav">
            <div class="container-fluid">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HRDashboard" asp-action="Index"><i class="fa-solid fa-table-columns"></i>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index"><i class="fa-solid fa-users"></i>Quản lý Nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Departments" asp-action="Index"><i class="fa-solid fa-building-user"></i>Quản lý Phòng ban</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Questions" asp-action="Index"><i class="fa-solid fa-circle-question"></i>Ngân hàng Câu hỏi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Tests" asp-action="Index"><i class="fa-solid fa-file-lines"></i>Quản lý Bài test</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Grading" asp-action="Index"><i class="fa-solid fa-marker"></i>Chấm bài & Đánh giá</a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="main-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>