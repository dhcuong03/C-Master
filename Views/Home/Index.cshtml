@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Container chính */
    .home-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
        text-align: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Tiêu đề */
    .welcome-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .welcome-text {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 30px;
    }

    /* Grid card */
    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    /* Card chung */
    .role-card {
        border-radius: 15px;
        padding: 25px;
        color: white;
        box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .role-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    }

    /* Card theo role */
    .role-card.admin {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
    }

    .role-card.manager {
        background: linear-gradient(135deg, #3498db, #2980b9);
    }

    .role-card.employee {
        background: linear-gradient(135deg, #27ae60, #1e8449);
    }

    /* Nút */
    .btn {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 18px;
        border-radius: 8px;
        background: white;
        color: inherit;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.2s ease, color 0.2s ease;
    }

    .role-card.admin .btn:hover {
        background: #c0392b;
        color: white;
    }

    .role-card.manager .btn:hover {
        background: #2980b9;
        color: white;
    }

    .role-card.employee .btn:hover {
        background: #1e8449;
        color: white;
    }
</style>

<div class="home-container">
    <div class="welcome-section">
        <h1 class="welcome-title">👋 Welcome to TestMaster</h1>
        <p class="welcome-text">
            Đây là hệ thống <strong>Employee Assessment</strong>.
            Hãy chọn vai trò để bắt đầu.
        </p>
    </div>

    <div class="card-grid">
        <div class="role-card admin">
            <h2>👑 Admin</h2>
            <p>Quản lý toàn bộ hệ thống, người dùng và báo cáo.</p>
            <a href="/AdminDashboard" class="btn">Go to Admin Dashboard</a>
        </div>

        <div class="role-card manager">
            <h2>📊 Manager</h2>
            <p>Theo dõi tiến độ nhân viên, quản lý nhóm của bạn.</p>
            <a href="/ManagerDashboard" class="btn">Go to Manager Dashboard</a>
        </div>

        <div class="role-card employee">
            <h2>💼 Employee</h2>
            <p>Xem nhiệm vụ và đánh giá của bạn.</p>
            <a href="/EmployeeDashboard" class="btn">Go to Employee Dashboard</a>
        </div>
    </div>
</div>
