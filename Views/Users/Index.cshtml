@model IEnumerable<TestMaster.Models.User>

@{
    // Đặt tiêu đề cho trang
    ViewData["Title"] = "Danh sách người dùng";

    // --- LOGIC CHỌN LAYOUT ---
    // Tự động chọn layout phù hợp với vai trò của người dùng
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_HRLayout.cshtml";
    }
}

<!--
    CSS ĐÃ ĐƯỢC NÂNG CẤP HOÀN TOÀN
    Sử dụng biến màu để dễ quản lý và phong cách hiện đại hơn.
-->
<style>
    :root {
        --primary-color-hr: #007bff;
        --success-color-hr: #28a745;
        --info-color-hr: #17a2b8;
        --warning-color-hr: #ffc107;
        --danger-color-hr: #dc3545;
        --light-gray-hr: #f8f9fa;
        --border-color-hr: #dee2e6;
        --text-dark-hr: #343a40;
        --text-light-hr: #ffffff;
        --shadow-sm-hr: 0 .125rem .25rem rgba(0, 0, 0, .075);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-color-hr);
    }

    .page-title {
        font-size: 1.75rem; /* 28px */
        font-weight: 600;
        color: var(--text-dark-hr);
    }

    .btn-create {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem; /* Khoảng cách giữa icon và text */
        padding: 0.625rem 1.25rem; /* 10px 20px */
        background-color: var(--primary-color-hr);
        color: var(--text-light-hr);
        font-weight: 500;
        text-decoration: none;
        border-radius: 0.375rem; /* 6px */
        border: none;
        transition: all 0.2s ease-in-out;
        box-shadow: var(--shadow-sm-hr);
    }

        .btn-create:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15);
        }

    /* Card chứa table */
    .table-container-card {
        background-color: var(--text-light-hr);
        border-radius: 0.75rem; /* 12px */
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    /* Table */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

        .custom-table thead th {
            background-color: var(--light-gray-hr);
            color: var(--text-dark-hr);
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem; /* 13px */
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--border-color-hr);
        }

        .custom-table tbody td {
            padding: 1rem;
            font-size: 0.9375rem; /* 15px */
            border-bottom: 1px solid var(--border-color-hr);
            vertical-align: middle;
        }

        .custom-table tbody tr:last-child td {
            border-bottom: none;
        }

        .custom-table tbody tr:hover {
            background-color: #f1f8ff;
        }

    /* Action Buttons */
    .actions-cell {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 38px;
        height: 38px;
        border: none;
        border-radius: 50%; /* Bo tròn thành hình tròn */
        text-decoration: none;
        color: var(--text-light-hr);
        transition: all 0.2s ease-in-out;
        font-size: 1rem; /* Kích thước icon */
    }

        .btn-action:hover {
            transform: scale(1.1);
            filter: brightness(1.1);
        }

    .btn-edit {
        background-color: var(--info-color-hr);
    }

    .btn-detail {
        background-color: #6f42c1;
    }
    /* Màu tím đẹp hơn */
    .btn-delete {
        background-color: var(--danger-color-hr);
    }

</style>

<div class="table-container-card">
    <div class="page-header">
        <h1 class="page-title">Quản lý người dùng</h1>
        <a class="btn-create" asp-action="Create">
            <i class="fas fa-plus"></i>
            <span>Thêm mới</span>
        </a>
    </div>

    <div class="table-responsive">
        <table class="custom-table">
            <thead>
                <tr>
                    <!-- CÁC CỘT ĐÃ ĐƯỢC CẬP NHẬT -->
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Department)</th>
                    <th>@Html.DisplayNameFor(model => model.Level)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- CÁC CỘT ĐÃ ĐƯỢC CẬP NHẬT -->
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department.DepartmentName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Level.LevelName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                        <td>
                            <div class="actions-cell">
                                <a class="btn-action btn-edit" asp-action="Edit" asp-route-id="@item.UserId" title="Sửa"><i class="fas fa-pencil-alt"></i></a>
                                <a class="btn-action btn-detail" asp-action="Details" asp-route-id="@item.UserId" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                <a class="btn-action btn-delete" asp-action="Delete" asp-route-id="@item.UserId" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
