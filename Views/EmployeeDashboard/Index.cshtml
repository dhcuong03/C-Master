@{
    ViewData["Title"] = "Bảng điều khiển Nhân viên";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng trở lại, @ViewBag.FullName!</h1>
    <p>Đây là trang dành cho nhân viên.</p>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bài test được giao</h5>
                    <p class="card-text">Xem danh sách các bài test bạn cần hoàn thành.</p>
                    <a href="#" class="btn btn-primary">Xem danh sách</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Lịch sử làm bài</h5>
                    <p class="card-text">Xem lại kết quả các bài test bạn đã làm trước đây.</p>
                    <a href="#" class="btn btn-secondary">Xem lịch sử</a>
                </div>
            </div>
        </div>
    </div>
</div>

